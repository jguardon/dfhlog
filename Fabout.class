' Gambas class file


PUBLIC SUB Form_Open()
    DIM t, ctyd, y, m, d AS String
    DIM da AS Date
    DIM F AS File
    IF Exist(User.Home &/ "/.dfh_Log/cty.dat") THEN
        F = OPEN User.Home &/ "/.dfh_Log/cty.dat" FOR INPUT
        
        WHILE NOT Eof(F)
            LINE INPUT #F, t  
            IF InStr(t, "=VER2") > 1 THEN 
                ctyd = Mid(t, InStr(t, "=VER2") + 4, 8)
                y = Left(ctyd, 4)
                m = Mid(ctyd, 5, 2)
                d = Right(ctyd, 2)
                ctyd = d & "/" & m & "/" & y
                
                BREAK 
                
            ENDIF 
        
        
        WEND
        CLOSE #F
    
    ENDIF 

  lblAbout.Text = "<b>" & Application.Name & " " & Application.Version & "</b><br/>" &
  Application.Title & "<br/>" &
  "cty.dat version: " & ctyd & "<br/>" &
  ("Author: Jesús Guardón, EA7DFH") 
  

END

PUBLIC SUB btnOK_Click()

  ME.Close

END
