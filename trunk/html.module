' Gambas module file

PUBLIC FUNCTION header(title AS String) AS String
  
  DIM h AS String
  
  h = "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n<head>\n<title>" & title & "</title>\n<meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\"/>\n<meta http-equiv=\"Cache-Control\" content=\"no-cache, must-revalidate\">\n" &
  "" & css() & "\n</head>\n<body>\n"

  RETURN h
END

PUBLIC FUNCTION footer() AS String
  
  DIM f AS String
  
  f = "<div align=\"center\" style=\"font-size:9px;\">Generated by dfhLog v. " & Application.Version & "</div>\n</body>\n</html>\n"
  RETURN f
  
END

PUBLIC FUNCTION css() AS String
  
  DIM sCss AS String
  sCss = "<style type=\"text/css\">\n\nbody {\n\tmargin-left: 10px;\n\tmargin-top: 10px;\n\tmargin-right: 10px;\n\tmargin-bottom: 10px;\n\tfont-family: Arial, Helvetica, sans-serif;\n\tfont-size: 14px;\n\tbackground: #ffffff url(\"/usr/share/dfhlog-images/bg.gif\") repeat 0 0; height: 100%;width: 100%;\n}\n#hdr {\n\tfont-weight:bold\n}\n</style>\n"
  RETURN sCss
END






