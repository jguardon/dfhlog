PUBLIC FUNCTION header(title AS String) AS String
  
  DIM h AS String
  
  h = "<!DOCTYPE html PUBLIC \"-//W3C//DTD XHTML 1.0 Transitional//EN\" \"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd\">\n<html xmlns=\"http://www.w3.org/1999/xhtml\">\n<head>\n<title>" & title & "</title>\n<meta http-equiv=\"Content-Type\" content=\"text/html; charset=UTF-8\"/>\n<meta http-equiv=\"Cache-Control\" content=\"no-cache, must-revalidate\">\n" &
  "" & css() & "\n</head>\n<body>\n"

  RETURN h
END

PUBLIC FUNCTION footer() AS String
  
  DIM f AS String
  
  f = "<div align=\"center\" style=\"font-size:9px;\">Generated by dfhLog v. " & Application.Version & "</div>\n</body>\n</html>\n"
  RETURN f
  
END

PUBLIC FUNCTION css() AS String
  
  DIM sCss AS String
  sCss = "<style type=\"text/css\" media=\"screen\">\n"
    "html {\n"
    "width: 100%;\n"
    "height: 100%;\n" 
    "}\n"
    "body {\n"
    "width: 100%;\n"
    "height: 100%;\n" 
    "margin: 10 px;\n"
    "font-family: Arial, Helvetica, sans-serif;\n"
    "font-size: 14 px;\n"
    "background-image: -webkit-gradient(\n"
    "linear,\n"
    "left bottom,\n"
    "left top,\n"
    "color-stop(0.20, rgb(196,181,255)),\n"
    "color-stop(1, rgb(255,255,255))\n"
    ");\n"
    "background-image: -moz-linear-gradient(\n"
    "center bottom,\n"
    "rgb(196,181,255) 20%,\n"
    "rgb(255,255,255) 100%\n"
    ");\n"
    "}\n"
    "#hdr {font-weight: bold}\n"
    "h2 {text-align: center}\n"
    "</style>\n"
    RETURN sCss
END






