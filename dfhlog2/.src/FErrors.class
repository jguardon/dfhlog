PRIVATE $error AS String

PUBLIC SUB Form_Open()

    ME.Center
    txtError.Clear
    txtError.Text = $error

END

PUBLIC SUB showError(myError AS String[])

    $error &= "[Error]\n" & myError[0]
    $error &= "\n[Where]\n" & myError[1]
    $error &= "\n[Backtrace]\n" & myError[2]
    ME.ShowModal

END

PUBLIC SUB btnOk_Click()

    IF chkReport THEN
        ' TODO report error to a remote db
    ENDIF
    ME.Close

END
